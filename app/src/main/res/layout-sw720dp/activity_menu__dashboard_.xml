<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:contentDescription="@string/desc"
        android:scaleType="fitXY"
        android:src="@drawable/headerlogo" />
    
    <TextView
	    android:id="@+id/version"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:layout_marginTop="-23dp"
	    android:text="@string/version"
	    android:textColor="#fff"
	    android:textSize="18sp"
	    android:textStyle="bold" />
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
    
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:paddingRight="10dp"
       android:text="PS Name :"
       android:textColor="#FF0000"
       android:textSize="18sp"
       android:textStyle="bold" />
   
   <TextView
       android:id="@+id/psname"
       android:layout_width="200dp"
       android:layout_height="wrap_content"
       android:layout_marginRight="10dp"
       android:text=""
       android:textColor="#FF0000"
       android:textSize="18sp"
       android:textStyle="bold" />
   
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:paddingRight="10dp"
       android:text="Officer Name :"
       android:textColor="#FF0000"
       android:textSize="18sp"
       android:textStyle="bold" />
   
   <TextView
       android:id="@+id/officername"
       android:layout_width="220dp"
       android:layout_height="wrap_content"
       android:text=""
       android:textColor="#FF0000"
       android:textSize="18sp"
       android:textStyle="bold" />
   
   </LinearLayout>
   
     <ImageView
         android:id="@+id/logout"
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:layout_marginRight="20dp"
         android:layout_marginTop="0dp"
         android:contentDescription="@string/desc"
         android:src="@drawable/logout" />
      
    </LinearLayout>
   

  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="60dp"
      android:orientation="horizontal"
      android:weightSum="1" >
      
      <LinearLayout 
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:gravity="center"
          android:layout_weight="0.5">

      <ImageView
          android:id="@+id/generate_petty"
          android:layout_width="130dp"
          android:layout_height="130dp"
          android:contentDescription="@string/desc"
          android:src="@drawable/add_case" />
      
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:text="Generate ePetty Case"
          android:textColor="#ffffff"
          android:textSize="25sp"
          android:textStyle="bold" />

      </LinearLayout>
      
    
      
      <LinearLayout 
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:gravity="center"
          android:layout_weight="0.5">

      <ImageView
          android:id="@+id/previous_reports"
          android:layout_width="130dp"
          android:layout_height="130dp"
          android:contentDescription="@string/desc"
          android:src="@drawable/previous_history" />
      
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:text="Previous History"
          android:textColor="#ffffff"
          android:textSize="25sp"
          android:textStyle="bold" />

      </LinearLayout>
      
  </LinearLayout>
  
  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:orientation="horizontal"
      android:weightSum="1" >
        <LinearLayout 
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:orientation="vertical"
          android:gravity="center"
          android:layout_weight="0.5">

      <ImageView
          android:id="@+id/duplicate_print"
          android:layout_width="130dp"
          android:layout_height="130dp"
          android:contentDescription="@string/desc"
          android:src="@drawable/dup_print" />
      
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:text="Duplicate Print"
          android:textColor="#ffffff"
          android:textSize="25sp"
          android:textStyle="bold" />

      </LinearLayout>
     
      
      <LinearLayout 
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:orientation="vertical"
          android:gravity="center"
          android:layout_weight="0.5">

      <ImageView
          android:id="@+id/reports"
          android:layout_width="130dp"
          android:layout_height="130dp"
          android:contentDescription="@string/desc"
          android:src="@drawable/reports" />
      
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:text="Reports"
          android:textColor="#ffffff"
          android:textSize="25sp"
          android:textStyle="bold" />

      </LinearLayout>
      
  </LinearLayout>
  
<LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:orientation="horizontal"
      android:weightSum="1" >
      
     <LinearLayout 
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:gravity="center"
          android:layout_weight="0.5">

      <ImageView
          android:id="@+id/masters"
          android:layout_width="130dp"
          android:layout_height="130dp"
          android:contentDescription="@string/desc"
          android:src="@drawable/download" />
      
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:text="Download Masters"
          android:textColor="#ffffff"
          android:textSize="25sp"
          android:textStyle="bold" />

      </LinearLayout>  
      
  <LinearLayout 
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:orientation="vertical"
          android:gravity="center"
          android:layout_weight="0.5">

      <ImageView
          android:id="@+id/settings"
          android:layout_width="130dp"
          android:layout_height="130dp"
          android:contentDescription="@string/desc"
          android:src="@drawable/settings" />
      
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:text="Settings"
          android:textColor="#ffffff"
          android:textSize="25sp"
          android:textStyle="bold" />

      </LinearLayout>
      
  </LinearLayout>
  
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="0dp"
    android:gravity="bottom|center"
    android:orientation="vertical" >

<!-- <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:gravity="center"
    android:text="An Integrated Petty case CP Act under the Hyderabad Policing System"
    android:textColor="#FF0000"
    android:textSize="18sp"
    android:textStyle="bold" /> -->

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:layout_marginTop="0dp"
         android:text="DEVELOPED BY MOTHER TECHNOLOGIES PROJECT VENTURES"
         android:textColor="#cccccc"
         android:textSize="16sp"
         android:layout_marginBottom="5dp"
         android:textStyle="bold" />

  </LinearLayout>
  
  <LinearLayout
 	    android:layout_width="fill_parent"
 	    android:layout_height="fill_parent"
 	    android:layout_gravity="bottom"
 	    android:gravity="bottom"
 	    android:layout_marginBottom="10dp"
 	    android:orientation="vertical" >

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:layout_gravity="center"
    android:text="An Integrated Petty case CP Act under the Hyderabad Policing System"
    android:textColor="#FF0000"
    android:textSize="18sp"
    
    android:textStyle="bold" />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:layout_marginTop="0dp"
         android:text="AN INTEGRATED COMMUNITY POLICING SYSTEM BY MOTHER TECHNOLOGIES PRIVATE LIMITED"
         android:textColor="#cccccc"
         android:textSize="12sp"
         android:textStyle="bold" />

  </LinearLayout>
  

</LinearLayout>