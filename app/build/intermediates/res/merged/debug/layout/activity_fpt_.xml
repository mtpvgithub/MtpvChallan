<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg1"
    android:orientation="vertical"
    tools:context="com.mtpv.LawnOrder.FPT_Activity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:src="@drawable/headerlogo" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Select Finger to Scan"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold" />
   
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:weightSum="1">
        
         <CheckBox
               android:id="@+id/left_tf"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingLeft="5dp"
               android:text="Left Thumb"
               android:textColor="#ffffff"
               android:textSize="14sp" 
               android:layout_weight="0.5"/>  
        <CheckBox
                android:id="@+id/right_tf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Right Thumb"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:layout_weight="0.5" />
        
    </LinearLayout>
    
    <Button
        android:id="@+id/more_fpt"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:background="@drawable/btns"
        android:text="More" />
    
    <LinearLayout 
        android:id="@+id/fpt_more"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:weightSum="1">
        
        
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.5">
            
        
            
         	<CheckBox
         	    android:id="@+id/left_if"
         	    android:layout_width="wrap_content"
         	    android:layout_height="wrap_content"
         	    android:layout_marginTop="5dp"
         	    android:paddingLeft="5dp"
         	    android:text="Left Index Finger"
         	    android:textColor="#ffffff"
         	    android:textSize="14sp" />
                        
            <CheckBox
                android:id="@+id/left_mf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:text="Left Middle Finger"
                android:textColor="#ffffff"
                android:textSize="14sp" />
            
           <CheckBox
               android:id="@+id/left_rf"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
               android:paddingLeft="5dp"
               android:text="Left Ring Finger"
               android:textColor="#ffffff"
               android:textSize="14sp" />
            
        	<CheckBox
        	    android:id="@+id/left_pf"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:layout_marginTop="5dp"
        	    android:paddingLeft="5dp"
        	    android:text="Left Little Finger"
        	    android:textColor="#ffffff"
        	    android:textSize="14sp" />
            
        </LinearLayout>
        
        
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.5">
            
            
            
           <CheckBox
               android:id="@+id/right_if"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
               android:paddingLeft="5dp"
               android:text="Right Index Finger"
               android:textColor="#ffffff"
               android:textSize="14sp" />
            
            <CheckBox
                android:id="@+id/right_mf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:text="Right Middle Finger"
                android:textColor="#ffffff"
                android:textSize="14sp" />
            
            <CheckBox
                android:id="@+id/right_rf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:text="Right Ring Finger"
                android:textColor="#ffffff"
                android:textSize="14sp" />
            
         	<CheckBox
         	    android:id="@+id/right_pf"
         	    android:layout_width="wrap_content"
         	    android:layout_height="wrap_content"
         	    android:layout_marginTop="5dp"
         	    android:paddingLeft="5dp"
         	    android:text="Right Little Finger"
         	    android:textColor="#ffffff"
         	    android:textSize="14sp" />
            
        </LinearLayout>
        
   
        
        
        
    </LinearLayout>
    
    
   
    
     <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:weightSum="1">
        
         <CheckBox
               android:id="@+id/no_left_arm"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingLeft="5dp"
               android:text="No Left Arm"
               android:textColor="#ffffff"
               android:textSize="14sp" 
               android:layout_weight="0.5"/>  
        <CheckBox
                android:id="@+id/no_right_arm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="No Right Arm"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:layout_weight="0.5" />
        
    </LinearLayout>
    
    
     <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/textView_serialNumber"
            android:textColor="#ffffff"
            android:text="fvgvfgfg"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="18sp"/>
     
     
   <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="30dp"
       android:orientation="horizontal"
       android:paddingLeft="10dp"
       android:paddingTop="15dp"
       android:weightSum="1" >

     <ImageView
         android:id="@+id/back_btn"
         android:layout_width="50dp"
         android:layout_height="35dp"
         android:layout_weight="0.2"
         android:contentDescription="@string/desc"
         android:gravity="right"
         android:src="@drawable/back" />
    
